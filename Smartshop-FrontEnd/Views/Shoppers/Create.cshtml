@model Smartshop_FrontEnd.Models.Shopper

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/shopper.css">
</head>

<form method="post" asp-action="Create">
    <div class="body"></div>
    <div class="grad"></div>
    <div class="header">
        <div>Smart<span>Shop</span></div>
    </div>
    <br>
    <div class="login">
        <br>
        <input asp-for="Email" type="text" placeholder="correo electronico" name="email"><br>
        <input type="submit" value="Ingresar" onclick="location.href='@Url.Action("Index", "Products")'" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
